<?xml version="1.0"?>
<launch>
  <arg name="robot_name" />
  <arg name="color" default="blue" />
  <arg name="init_x" default="0" />
  <arg name="init_y" default="0" />
  <arg name="teleop" default="false" />

  <!-- Static tf from map to /racecar/odom -->
  <include file="$(find racecar_gazebo)/launch/include/spawn_racecar.launch">
    <arg name="robot_name" value="$(arg robot_name)" />
    <arg name="color" value="$(arg color)" />
    <arg name="init_x" value="$(arg init_x)" />
    <arg name="init_y" value="$(arg init_y)" />
  </include>

  <!-- Collision publisher -->
  <group ns="$(arg robot_name)">
    <node pkg="racecar_helper" type="collision_publisher_node" name="collision_publisher_node" output="screen">
      <param name="robot_name" value="$(arg robot_name)" />
    </node>

    <node pkg="gmcl" type="gmcl" name="gmcl" output="screen">
      <!-- Pose of the robot in the map -->
      <!-- Map topic -->
      <param name="scan_topic" value="scan" />
      <!-- Odometry topic -->
      <param name="odom_frame_id" value="$(arg robot_name)/odom" />
      <param name="base_frame_id" value="$(arg robot_name)/base_link" />
      <!-- Map type -->
      <param name="use_map_topic" value="true" />
      <param name="map_topic" value="map" />
      <!-- AMCL parameters -->
      <param name="use_optimal_filter" value="true"/>
      <param name="use_intelligent_filter" value="false"/>
      <param name="use_self_adaptive" value="false"/>
      <param name="use_kld_sampling" value="true"/>

      <param name="N_aux_particles" value="10"/>

      <param name="crossover_alpha" value=".5"/>
      <param name="mutation_probability" value="0.1"/>

      <param name="energy_map_resolution_x" value="0.2"/>
      <param name="energy_map_resolution_y" value="0.2"/>
      <param name="energy_threshold_value" value="0.05"/>
      <param name="publish_ser" value="false"/>

      <param name="odom_model_type" value="diff"/>
      <param name="transform_tolerance" value="0.1" />
      <param name="gui_publish_rate" value="2.0"/>
      <param name="laser_max_beams" value="30"/>
      <param name="min_particles" value="500"/>
      <param name="max_particles" value="2000"/>
      <param name="kld_err" value="0.01"/>
      <param name="kld_z" value="0.99"/>

      <param name="odom_alpha1" value="0.2"/>
      <param name="odom_alpha2" value="0.2"/>
      <param name="odom_alpha3" value="0.8"/>
      <param name="odom_alpha4" value="0.2"/>
      <param name="laser_z_hit" value="0.5"/>
      <param name="laser_z_short" value="0.05"/>
      <param name="laser_z_max" value="0.05"/>
      <param name="laser_z_rand" value="0.5"/>
      <param name="laser_sigma_hit" value="0.2"/>
      <param name="laser_lambda_short" value="0.1"/>

      <param name="laser_model_type" value="likelihood_field"/>
    <!--   <param name="laser_model_type" value="beam"/>  -->
      <param name="laser_likelihood_max_dist" value="2.5"/>
      <param name="update_min_d" value="0.2"/>
      <param name="update_min_a" value="0.5"/>
      <param name="resample_interval" value="1"/>
      <param name="transform_tolerance" value="0.1"/>
      <param name="recovery_alpha_slow" value="0.0"/>
      <param name="recovery_alpha_fast" value="0.0"/>
      <param name="selective_resampling" value="false"/>

      <remap from="map" to="/map" />
    </node>

  </group>

  <group if="$(arg teleop)">
    <include file="$(find racecar_control)/launch/teleop.launch">
      <arg name="robot_name" value="$(arg robot_name)" />
    </include>
  </group>

</launch>